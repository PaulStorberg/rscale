<div class="sign-pages">
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "sign-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "sign-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary js-scroll-trigger" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
