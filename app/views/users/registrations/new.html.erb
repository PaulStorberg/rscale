<div class="sign-pages">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "sign-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "sign-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: "sign-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "sign-submit-button" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
