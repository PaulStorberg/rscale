<div class="sign-pages">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email", autocomplete: "email", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary js-scroll-trigger" %>
    </div>
  <% end %>
</div>
