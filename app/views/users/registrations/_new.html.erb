<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autocomplete: "email", class: "sign-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "sign-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: "sign-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary js-scroll-trigger call-to-action-sign-up" %>
  </div>
<% end %>
