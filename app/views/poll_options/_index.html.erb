<div class="poll-option-index" style="text-align: center;">
  <% if @poll.poll_options.any? %>
    <h5>Poll Options For <%= @poll.title %></h5>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Vote Range</th>
          <% if policy(@poll).update? %>
            <th>Edit</th>
          <% end %>
          <% if @poll.inactive? %>
            <th>Sum</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @poll.poll_options.each do |poll_option| %>
          <tr>
            <td><%= poll_option.title %></td>
            <td><%= poll_option.description %></td>
            <% if current_user.voted_for_option?(poll_option) %>
              <td><%= render partial: "votes/new", locals: { option_id: poll_option.id } %></td>
            <% else %>
              <td><%= render partial: "votes/show", locals: { option_id: poll_option.id } %></td>
            <% end %>
            <% if policy(@poll).update? %>
              <td><%= link_to 'Edit', edit_poll_option_path(poll_option) %></td>
            <% end %>
            <% if @poll.inactive? %>
              <td><%= poll_option.sum_ratings.round(2) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
