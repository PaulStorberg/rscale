<div class="poll-option-index" style="text-align: center;">
  <% if @poll.poll_options.any? %>
    <h5>Poll Options For <%= @poll.title %></h5>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>View</th>
          <th>Vote</th>
          <% if policy(@poll).update? %>
            <th>Edit</th>
            <th>Delete</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @poll.poll_options.each do |poll_option| %>
          <tr>
            <td><%= poll_option.title %></td>
            <td><%= poll_option.description %></td>
            <td><%= link_to 'View', poll_option_path(poll_option) %></td>
            <td><%= link_to 'Vote', new_vote_path(poll_option_id: poll_option.id) %></td>
            <% if policy(@poll).update? %>
              <td><%= link_to 'Edit', edit_poll_option_path(poll_option) %></td>
              <td><%= link_to 'Delete', poll_option, method: :delete, data: { confirm: "Are you sure?" }, class: "form-path-link" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
