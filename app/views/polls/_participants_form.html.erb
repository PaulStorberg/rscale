<div class="form">
  <%= form_tag "/create_participants", remote: true do %>
    <%= hidden_field_tag :poll_id, @poll.id %>
    <div class="">
      <%= label_tag :resource_admin_emails %><br />
      <%= text_area_tag(:resource_admin_emails, value = nil, options = {multiple: true, style: "width: 100%; height: 100px;"}) %>
    </div>
    <div class="">
      <%= label_tag :user_emails %><br />
      <%= text_area_tag(:user_emails, value = nil, options = {multiple: true, style: "width: 100%; height: 100px;"}) %>
    </div>
    <div class="participants-bottom-button">
      <%= submit_tag "Select", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
